@model IEnumerable<WebApplicationFinalAssignment.Models.Books>

@{
    var info = ViewData["info"].ToString();
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Book List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddBook" class="btn btn-primary">
                Add
            </a>
        </div>
    </div>
    @if (@info != "")
    {
        <div class="alert alert-success alert-dismissible fade show">
            <p>@info</p>
        </div>
    }


    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-dark table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Book
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Published
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Updated
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td><a asp-controller="Book" asp-action="BookDetails" asp-route-id="@data.BookId">@data.BookId</a> </td>
                        <td>@data.BookDept</td>
                        <td>@data.BookName</td>
                        <td>@data.AuthorName</td>
                        <td>@data.PublisherYear</td>
                        <td>Rs. @data.Price</td>
                        <td>@data.UpdatedOn</td>
                        <td>
                            <a asp-controller="Book" asp-action="EditBook" asp-route-id="@data.BookId" class="btn btn-primary">
                                Edit
                            </a>
                            <a asp-controller="Book" asp-action="DeleteBook" asp-route-id="@data.BookId" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-danger">
            <p> No data Found!</p>
        </div>
    }
</div>