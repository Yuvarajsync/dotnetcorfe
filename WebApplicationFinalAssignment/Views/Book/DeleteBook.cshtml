@model WebApplicationFinalAssignment.Models.Books

@{
    string Dept = "";
    foreach (var val in (IEnumerable<Books>)ViewData["dept"])
    {
        Dept = val.BookDept;
    }
}

<form method="post">
    <input asp-for="BookId" hidden />
    <div class="border p-3 bg-dark rounded text-light">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Book </h2>
        </div>
        <h5 class="text-info">@ViewBag.info</h5>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookId"></label>
                    </div>
                    <div class="col-8">
                        <input  asp-for="BookId" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookCategories"></label>
                    </div>
                    <div class="col-8">
                        <input value="@Dept" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookName" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AuthorName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AuthorName" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PublisherYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublisherYear" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UpdatedOn"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UpdatedOn" disabled class="form-control" />
                    </div>
                </div>
                <div class="col-8 text-left w-100 float-right px-0" >
                    <input type="submit" class="btn btn-danger col-6" value="Delete" />
                    <a asp-action="ListBooks" class="btn btn-primary col-5">
                        Cancel
                    </a>

                </div>
            </div>
        </div>
    </div>
</form>